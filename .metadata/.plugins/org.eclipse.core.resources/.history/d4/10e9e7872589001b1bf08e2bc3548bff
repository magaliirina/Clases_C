#include <stdio.h>
#include <stdlib.h>

int main(void) {
	int maximo_primerNumero;
	int minimo_primerNumero;
	int numero;
	int maximo;
	int minimo;
	int flag=0;

	for(int i=0;i<5;i++)
	{
		printf("Ingrese un numero:");
		scanf("%d",&numero);
		if(flag==0){
			maximo_primerNumero=numero;
			minimo_primerNumero=numero;
			flag=1;
		}
		else if(maximo_primerNumero<numero){
			maximo_primerNumero=numero;
		}
		else if(minimo_primerNumero>numero){
			minimo_primerNumero=numero;
		}
	}
	printf("El numero maximo es %d y el numero minimo es %d",maximo_primerNumero,minimo_primerNumero);



	return EXIT_SUCCESS;
}
